# This file demonstrates the use of main features in Devalang.

bank 808

.808.kick 1/4 {
    drive:50
}

.808.snare 1000 {
    drive:50, 
    reverb: 50
}

loop 10:
.x auto args
    .y auto { drive: 50 }
.z auto args

if loopCount > 5:
    .808.kick 1/4 {
        drive: 100
    }
else if loopCount == 5:
    .808.snare 1/4 {
        drive: 100
    }
else:
    .808.kick 1/4 {
        drive: 50
    }